    "name": "Nick Baugh",
    "email": "niftylettuce@gmail.com",
    "url": "http://niftylettuce.com/"
  },
  "bugs": "https://github.com/ladjs/koa-better-error-handler/issues",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    {
      "name": "Nick Baugh",
      "email": "niftylettuce@gmail.com",
      "url": "http://niftylettuce.com/"
    },
