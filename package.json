      "name": "Imed Jaberi",
      "email": "imed-jaberi@outlook.com",
      "url": "https://www.3imed-jaberi.com/"
    }
  ],
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "camelcase": "^6.2.0",
    "capitalize": "^2.0.3",
    "co": "^4.6.0",
    "fast-safe-stringify": "^2.0.7",
    "html-to-text": "5",
    "humanize-string": "^2.1.0",
    "lodash.iserror": "^3.1.1",
    "lodash.isfunction": "^3.0.9",
    "lodash.isnumber": "^3.0.3",
    "lodash.isobject": "^3.0.2",
    "lodash.isstring": "^4.0.1",
    "lodash.map": "^4.6.0",
    "lodash.values": "^4.3.0",
    "statuses": "^2.0.1",
    "toidentifier": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@koa/router": "^10.0.0",
    "ava": "3.11.1",
    "codecov": "^3.8.1",
    "cross-env": "^7.0.3",
    "eslint-config-xo-lass": "^1.0.5",
    "fixpack": "^4.0.0",
    "husky": "^5.0.9",
    "koa": "^2.13.1",
    "koa-404-handler": "^0.0.2",
    "koa-basic-auth": "^4.0.0",
    "koa-connect-flash": "^0.1.2",
    "koa-convert": "^2.0.0",
    "koa-generic-session": "^2.1.1",
    "koa-redis": "^4.0.1",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.20",
    "nyc": "^15.1.0",
    "redis": "^3.0.2",
    "remark-cli": "^9.0.0",
    "remark-preset-github": "^4.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "xo": "^0.37.1"
  },
  "engines": {
    "node": ">= 10.14"
  },
  "homepage": "https://github.com/ladjs/koa-better-error-handler",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "404",
    "500",
    "async",
    "await",
    "better",
    "boom",
    "context",
    "ctx",
    "custom",
    "error",
    "error-handler",
    "errors",
    "es7",
    "flash",
    "handler",
    "handling",
    "koa",
    "messages",
    "override",
    "promises",
    "stripe"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": "ladjs/koa-better-error-handler",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "npm run lint:js",
    "lint:js": "xo",
    "lint:md": "remark . -qfo",
    "postcoverage": "codecov",
    "precommit": "lint-staged && npm tes-ci",
    "pretest-ci": "npm run lint",
    "pretest-cov": "rimraf .nyc_output",
    "test": "ava",
    "test-ci": "npm run test-cov",
    "test-cov": "cross-env NODE_ENV=test nyc npm run test"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "ignore": [
      "examples",
      "test"
    ],
    "rules": {
      "no-negated-condition": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-set-has": "off"
    }
  }
}
